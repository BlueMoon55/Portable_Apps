<?xml version="1.0" encoding="UTF-8"?>
<setting>
  <corpora name="青空文庫TOP100_dev20180405" dbpath="Corpora/Aozora100/">
    <li name="青空文庫TOP100" path="Corpora/Aozora100/corpus" />
  </corpora>

  <!-- 索引関連 -->
  <!-- 要素内容への索引 -->
  <index_cix>
    <li name="テキスト" label="本文" middle_name="article" type="normal" field_name="キー" />
    <li name="テキスト" label="本文(正規表現)" middle_name="article" type="null" field_name="キー" />
  </index_cix>

  <!-- 要素への索引 -->
  <index_eix>
    <li name="コーパス" middle_name="corpus" is_empty="false" top="true" />
    <li name="記事" middle_name="article" is_empty="false" isBrowsed="true" />
    <li name="ブロック" middle_name="block" is_empty="false" />
    <li name="r" middle_name="r" is_empty="false" />
    <li name="テキスト" middle_name="text" is_empty="false" />
  </index_eix>

  <!-- 要素属性への索引 -->
  <index_aix>
    <li label="ルビ(rt)完全一致" name="r" middle_name="r" argument="rt" isCompleteMatch="true" field_name="キー" />
    <li label="ルビ(rt)部分一致" name="r" middle_name="r2" argument="rt" isCompleteMatch="false" field_name="キー" />
  </index_aix>

<!-- 検索関連オプション -->
  <!-- KWIC の文脈長 -->
  <length_context_kwic value="10" />
  <!-- 検索時の文脈マッチング範囲 -->
  <length_context_search value="10" />

  <!-- 結果レコードのフィールド定義 -->
  <field_setting>
    <li name="no" type="index" width="30" align="RIGHT" />
    <li name="前文脈" type="preceding_context" element="_sys" attribute="_preceding_context" width="180" align="RIGHT" sort_direction="R" />
    <li name="キー" type="key" element="_sys" attribute="_key" width="80" sort_order="1" />
    <li name="後文脈" type="following_context" element="_sys" attribute="_following_context" width="160" sort_order="2" />
    <li name="作品名" type="argument" element="記事" attribute="bib_作品名" width="80" />
    <li name="副題" type="argument" element="記事" attribute="bib_副題" width="80" />
    <li name="著者" type="argument" element="記事" attribute="bib_著者" width="80" />
    <li name="役割" type="argument" element="記事" attribute="bib_役割フラグ" width="80" />
    <li name="初出" type="argument" element="記事" attribute="bib_初出" width="80" />
    <li name="分類番号" type="argument" element="記事" attribute="bib_分類番号" width="80" />
    <li name="文字遣い種別" type="argument" element="記事" attribute="bib_文字遣い種別" width="80" />
    <li name="作品ID" type="argument" element="記事" attribute="bib_作品ID" width="80" />
    <li name="人物ID" type="argument" element="記事" attribute="bib_人物ID" width="80" />
    <li name="生年月日" type="argument" element="記事" attribute="bib_生年月日" width="80" />
    <li name="没年月日" type="argument" element="記事" attribute="bib_没年月日" width="80" />
    <li name="文字数" type="argument" element="記事" attribute="文字数" width="80" sort_type="numeric" align="RIGHT" />
  </field_setting>

<!--     コーパスフィールド -->
  <corpus_fields name="コーパス">
    <li element="コーパス" attribute="名前" width="120" name="コーパス名" />
  </corpus_fields>

<!-- 閲覧要素一覧用フィールド -->
<unit_fields name="作品別書誌情報一覧">
 <li element="記事" attribute="bib_作品ID" width="120" name="作品ID" />
 <li element="記事" attribute="bib_作品名" width="120" name="作品名" />
 <li element="記事" attribute="bib_副題" width="120" name="副題" />
 <li element="記事" attribute="bib_著者" width="120" name="著者" />
 <li element="記事" attribute="bib_役割フラグ" width="120" name="役割" />
 <li element="記事" attribute="bib_初出" width="120" name="初出" />
 <li element="記事" attribute="bib_分類番号" width="120" name="分類番号" />
 <li element="記事" attribute="bib_文字遣い種別" width="120" name="文字遣い種別" />
 <li element="記事" attribute="bib_図書カードURL" width="120" name="図書カードURL" />
 <li element="記事" attribute="bib_人物ID" width="120" name="人物ID" />
 <li element="記事" attribute="bib_底本名1" width="120" name="底本名" />
 <li element="記事" attribute="bib_底本出版社名1" width="120" name="底本出版社名" />
 <li element="記事" attribute="bib_底本初版発行年1" width="120" name="底本初版発行年" />
 <li element="記事" attribute="bib_入力に使用した版1" width="120" name="入力に使用した版" />
 <li element="記事" attribute="bib_ファイルURL" width="120" name="ファイルURL" />
 <li element="記事" attribute="文字数" width="120" name="文字数" align="RIGHT" sort_type="numeric"/>
 <li element="記事" attribute="bib_生年月日" width="120" name="生年月日" />
 <li element="記事" attribute="bib_没年月日" width="120" name="没年月日" />
 <li element="記事" attribute="path" width="120" name="path" />
</unit_fields>

<!-- 統計表用フィールド -->
  <stat_fields_1 label="キー，作品">
    <li name="キー"  width="100" />
    <li name="作品ID"  width="150" align="LEFT" />
    <li name="作品名"  width="150" align="LEFT" />
    <li name="著者"  width="150" align="LEFT" />
    <li name="文字数"  width="60" align="RIGHT" sort_type="numeric" />
    <li name="頻度"  width="60" align="RIGHT" sort_type="numeric" />
  </stat_fields_1>

  <stat_fields_2 label="キー，著者">
    <li name="キー"  width="40" />
    <li name="人物ID"  width="150" align="LEFT" />
    <li name="著者"  width="150" align="LEFT" />
    <li name="頻度"  width="60" align="RIGHT" sort_type="numeric" />
  </stat_fields_2>

  <stat_fields_3 label="キー">
    <li name="キー"  width="40" />
    <li name="頻度"  width="60" align="RIGHT" sort_type="numeric"/>
  </stat_fields_3>


<!-- 閲覧表示関連オプション -->
  <!-- ブラウザ -->
  <browsers temp_file="__searched_tmp.xml" label="記事">
    <li name="Microsoft Internet Explorer" option="/c start iexplore" os="Windows" path="cmd"/>
    <li name="Firefox(Windows)" option="/c start firefox" os="Windows" path="cmd"/>
    <li name="Chrome(Windows)" option="/c start chrome --allow-file-access-from-files" os="Windows" path="cmd"/>
    <li name="デフォルトブラウザ" os="Windows" path="[[default_browser]]"/>
    <li name="デフォルトブラウザ" os="Linux" path="[[default_browser]]"/>
    <li name="Firefox(Linux)" os="Linux" path="firefox"/>
    <li name="Chrome(Linux)" os="Linux" path="chrome --allow-file-access-from-files"/>
    <li name="Firefox(Mac)" option="-a firefox" os="Mac" path="open"/>
    <li name="Chrome(Mac)" option="-n -b com.google.Chrome --args --allow-file-access-from-files --user-data-dir=/tmp/himawari" os="Mac" path="open"/> 
    <li name="デフォルトブラウザ" os="Mac" path="[[default_browser]]"/>
    <li name="Safari(Mac)" option="-a safari" os="Mac" path="open"/>
  </browsers>


  <!-- 表示用 XSL -->
  <xsl_files root_path="Corpora/Aozora100/xslt">
    <li label="Aozora100" name="kotobun_written.xsl" />
  </xsl_files>

<!-- 字体辞書の URL -->
<jitaidic url="Corpora/jitaidic.xml" />

<!-- マニュアルの URL -->
